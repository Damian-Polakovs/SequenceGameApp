<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#34495E"
    tools:context=".HiScore">

    <TextView
        android:id="@+id/highScoreTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="High Scores"
        android:textSize="24sp"
        android:textColor="#ECF0F1"
        android:textAlignment="center"
        android:padding="8dp"
        android:background="#2980B9"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TableLayout
        android:id="@+id/highScoreTable"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:stretchColumns="*"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/highScoreTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TableRow android:background="#2C3E50">
            <TextView
                android:text="Rank"
                android:textStyle="bold"
                android:textColor="#ECF0F1"
                android:padding="8dp" />
            <TextView
                android:text="Name"
                android:textStyle="bold"
                android:textColor="#ECF0F1"
                android:padding="8dp" />
            <TextView
                android:text="Score"
                android:textStyle="bold"
                android:textColor="#ECF0F1"
                android:padding="8dp" />
        </TableRow>

        <TableRow>
            <TextView android:id="@+id/rank1" android:textColor="#ECF0F1" android:padding="8dp" />
            <TextView android:id="@+id/name1" android:textColor="#ECF0F1" android:padding="8dp" />
            <TextView android:id="@+id/score1" android:textColor="#ECF0F1" android:padding="8dp" />
        </TableRow>
        <TableRow>
            <TextView android:id="@+id/rank2" android:textColor="#ECF0F1" android:padding="8dp" />
            <TextView android:id="@+id/name2" android:textColor="#ECF0F1" android:padding="8dp" />
            <TextView android:id="@+id/score2" android:textColor="#ECF0F1" android:padding="8dp" />
        </TableRow>
        <TableRow>
            <TextView android:id="@+id/rank3" android:textColor="#ECF0F1" android:padding="8dp" />
            <TextView android:id="@+id/name3" android:textColor="#ECF0F1" android:padding="8dp" />
            <TextView android:id="@+id/score3" android:textColor="#ECF0F1" android:padding="8dp" />
        </TableRow>
        <TableRow>
            <TextView android:id="@+id/rank4" android:textColor="#ECF0F1" android:padding="8dp" />
            <TextView android:id="@+id/name4" android:textColor="#ECF0F1" android:padding="8dp" />
            <TextView android:id="@+id/score4" android:textColor="#ECF0F1" android:padding="8dp" />
        </TableRow>
        <TableRow>
            <TextView android:id="@+id/rank5" android:textColor="#ECF0F1" android:padding="8dp" />
            <TextView android:id="@+id/name5" android:textColor="#ECF0F1" android:padding="8dp" />
            <TextView android:id="@+id/score5" android:textColor="#ECF0F1" android:padding="8dp" />
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/backButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Back to Main Menu"
        android:textColor="#FFFFFF"
        android:background="#2C3E50"
        android:layout_marginTop="16dp"
        android:padding="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>